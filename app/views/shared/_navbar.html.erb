      <header class="header">
        <%= link_to root_path, class: "logo" do %>
          <%= image_tag "https://res.cloudinary.com/dkrtmft3y/image/upload/v1589285240/Logo-VGferronerie_bfrf9v.png", class: "img-responsive" %>
        <% end %>
        <input class="menu-btn" type="checkbox" id="menu-btn" />
        <label class="menu-icon" for="menu-btn"><span class="navicon"></span></label>
        <ul class="menu">
          <li>
            <div class="dropdown">
              <p class="dropdown-toggle mb-0" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Réalisations
              </p>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
                <% @categories = Categorie.all %>
                <% @categories.each do |categorie| %>
                  <%= link_to categorie.titre, category_path(categorie), class: "dropdown-item" %>
                <% end %>
              </div>
            </div>
          </li>
          <li>
            <% if params[:action] == ('show') || current_page?(new_contact_path) %>
              <%= link_to "L'artisan", root_path %>
            <% else %>
              <%= link_to "L'artisan", "#artisan" %>
            <% end %>
          </li>
          <li>
            <%= link_to "Contact", new_contact_path %>
          </li>
        </ul>
      </header>
