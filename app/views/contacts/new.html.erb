<div class="container-fluid">
  <div class="row justify-content-center p-5">
    <div class="col-lg-12 contact-page">
      <div class="form">
        <h1 class="text-center mb-3">Me contacter</h1>
        <%= simple_form_for(@contact) do |f| %>
          <%= f.input :nom, :label => "Nom", required: true, autofocus: true %>
          <%= f.input :prenom, :label => "Prénom", required: true, autofocus: true %>
          <%= f.input :email, :label => "Email", required: true %>
          <%= f.input :telephone, :label => "Numéro de téléphone" %>
          <%= f.input :objet, :collection => @objets, :label => "Sélectionner un objet...", required: true %>
          <%= f.input :description, :label => "Décrivez votre demande", required: true %>
          <div class="text-center">
            <%= f.submit "Envoyer", class: "btn btn-primary mt-4"%>
          </div>
        <% end %>
      </div>
      <div class="contact-photo">
        <%= image_tag ("https://images.unsplash.com/photo-1531220674280-b18cf8650cf3?ixlib=rb-1.2.1&auto=format&fit=crop&w=634&q=80"), class: "img-responsive d-block w-100"%>
      </div>
    </div>
  </div>

</div>
